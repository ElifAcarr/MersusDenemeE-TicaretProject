@model IEnumerable<Mersus.ETicaret.Models.Box>

@{
    ViewData["Title"] = "Index";
}

<h1>Sepet</h1>


<table class="table">
    <thead>
        <tr>

            <th>
                Ürün Barkod
            </th>
            <th>
                Ürün Adı
            </th>
            <th>
                Ürün Açıklaması
            </th>
            <th>
                Ürün Adet
            </th>
            <th>
                Fiyat
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Product.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @(item.Product.Price*item.Quantity)
                    
                </td>

                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> &nbsp;

                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Sepetten Çıkar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count() > 0)
{
    <form asp-action="OdemeYap" style="width: 25%">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input type="submit" value="Ödeme Yap" class="btn btn-primary" />
        </div>
    </form>
}
else
{
     
    <h1>Sepette ürün bulunamadı.</h1>
}

